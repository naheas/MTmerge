<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:rowCount="1" >

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_tab2_food_0"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:src="@drawable/darkbluebutton"
            android:text="없음" />

        <Button
            android:id="@+id/btn_tab2_food_1"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:src="@drawable/darkbluebutton"
            android:text="조금" />

        <Button
            android:id="@+id/btn_tab2_food_2"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:src="@drawable/darkbluebutton"
            android:text="보통" />

        <Button
            android:id="@+id/btn_tab2_food_3"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:src="@drawable/darkbluebutton"
            android:text="많이" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_tab2_food_name"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/tv_tab2_food_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/tv_tab2_food_name"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>